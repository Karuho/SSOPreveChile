<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_app2"
    tools:context=".Eliminar">

    <TextView
        android:id="@+id/txtCaution2"
        android:layout_width="341dp"
        android:layout_height="66dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="421dp"
        android:text="De estar inactiva la cuenta por 30 días, sus datos serán borrados de forma permanente."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCaution1"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="487dp"
        android:text="Su cuenta será suspendida. Puede recuperar su cuenta más tarde"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="251dp"
        android:layout_marginTop="397dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/bordes_redondos"
        android:text="No"
        app:backgroundTint="#3AA1A2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="397dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/bordes_redondos"
        android:text="Sí"
        app:backgroundTint="#3AA1A2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="674dp"
        android:text="¿Deseas eliminar tu cuenta?"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="91dp"
        android:layout_height="94dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="566dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_turquoise" />
</androidx.constraintlayout.widget.ConstraintLayout>