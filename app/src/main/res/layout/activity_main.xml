<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_app2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="287dp"
        android:background="@drawable/bordes_redondos"
        android:text="Iniciar Sesión"
        app:backgroundTint="#3AA1A2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="226dp"
        android:background="@drawable/bordes_redondos"
        android:text="Regístrate"
        app:backgroundTint="#3AA1A2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tilPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/bordes_texto"
        android:drawableStart="@drawable/ic_key2"
        android:ems="15"
        android:hint=" Contraseña"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tilEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="468dp"
        android:background="@drawable/bordes_texto"
        android:drawableStart="@drawable/ic_email1"
        android:drawingCacheQuality="auto"
        android:duplicateParentState="false"
        android:ems="15"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:shadowColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="531dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatarapp" />

    <CheckBox
        android:id="@+id/cbViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="351dp"
        android:layout_alignLeft="@+id/tilPass"
        android:layout_alignStart="@+id/tilPass"
        android:layout_below="@+id/tilPass"
        android:onClick="viewPass"
        android:text="Mostrar Contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>